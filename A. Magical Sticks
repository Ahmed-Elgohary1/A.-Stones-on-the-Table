#include <bits/stdc++.h>

using namespace std;

long long ans = 0;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);
    
    int t;
    long long n;
    cin >> t;
    
    while(t--) {
        cin >> n;
        if(n % 2 == 0) {
            cout << n/2 << "\n";
        } else if(n == 0) {
            cout << 0 << "\n";
        } else {
            cout << (((n - 1) / 2) + 1) << "\n";
        }
    }
    
    return 0;
}
